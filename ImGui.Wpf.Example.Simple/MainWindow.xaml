<Window x:Class="ImGui.Wpf.Example.Simple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImGui.Wpf - Simple Example" 
        WindowStartupLocation="CenterScreen"
        Width="800" Height="550">

    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <GroupBox Name="LeftGroup" Header="Demo" Grid.Column="0" />
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="5" />
        <GroupBox Name="RightGroup" Header="About" Grid.Column="2" />

    </Grid>

</Window>
